@model WebServiceAppOS.Models.Acreditacion
@*@model ClientOS.Models.AcreditacionDetalle*@

@{
    ViewData["Title"] = "Create";
}

<script src="~lib/jquery/dist/jquery-3.3.1.js" type="text/javascript">

    $(document).ready(function () {

        $('#creditos').on('input', function () {
            $.ajax({
                data: { cantidadCreditos:$('#creditos').val()},
                type: 'GET',
                url: '@Url.Action("costoTotal", "Home")',
                success: function (resultado)
                {
                    $("#costoTotal").val(resultado);
                }
            });
        });
    });

</script>


<h1>Create</h1>

<h4>Acreditacion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Matricula" class="control-label"></label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="creditos" class="control-label"></label>
                <input id="creditos" asp-for="creditos" class="form-control" />
                <span asp-validation-for="creditos" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="aceptado" /> @Html.DisplayNameFor(model => model.aceptado)
                </label>
            </div>
            <div class="form-group">
            <label asp-for="costoTotal" class="control-label"></label>
            <input  id="costoTotal" asp-for="costoTotal" class="form-control" />
            <span asp-validation-for="costoTotal" class="text-danger"></span>
        </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
